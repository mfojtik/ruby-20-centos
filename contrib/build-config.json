{
  "kind": "BuildConfig",
  "apiVersion": "v1beta1",
  "metadata":{
    "name": "ruby-20-centos-build"
  },
  "triggers": [
    {
      "type": "github",
      "github": {
        "secret": "secret101"
      }
    },
    {
      "type": "generic",
      "generic": {
        "secret": "secret101"
      }
    }
  ],
  "parameters": {
    "source" : {
      "type" : "Git",
      "git" : {
        "uri": "git://github.com/openshift/ruby-20-centos.git"
      }
    },
    "strategy": {
      "type": "Custom",
      "customStrategy": {
        "image": "openshift/sti-image-builder",
        "exposeDockerSocket": true,
        "env": [
          { "name": "IMAGE_NAME", "value": "openshift/ruby-20-centos"}
        ],
        "output": {
          "imageTag": "openshift/ruby-20-centos:qa-ready",
          "registry": "172.30.17.3:5001"
        }
      }
    }
  },
  "labels": {
    "name": "ruby-20-centos-build"
  }
}
